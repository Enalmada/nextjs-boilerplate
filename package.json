{
  "name": "t3-challenge",
  "version": "0.1.0",
  "scripts": {
    "docker": "docker compose up -d",
    "analyze": "cross-env ANALYZE=true pnpm run buildLocal",
    "build": "next build",
    "buildLocal": "cross-env NODE_ENV=production next build",
    "check-types": "tsc",
    "check-types-watch": "pnpm run check-types -- --watch --preserveWatchOutput",
    "codegen": "pnpm graphql-codegen --watch",
    "dev": "start-server-and-test dev-init http://localhost:3000 codegen",
    "dev-init": "pnpm docker && pnpm install && pnpm migrate && next dev",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "migrate": "dotenv -e ./.env -e ./dev.env prisma migrate dev",
    "postinstall": "prisma generate",
    "prepare": "husky install",
    "start": "next start"
  },
  "dependencies": {
    "@apollo/client": "3.8.0-beta.2",
    "@apollo/experimental-nextjs-app-support": "^0.2.1",
    "@apollo/server": "^4.7.3",
    "@as-integrations/next": "^2.0.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^4.15.0",
    "class-validator": "^0.14.0",
    "encoding": "^0.1.13",
    "graphql": "^16.6.0",
    "next": "13.4.5",
    "next-auth": "^4.22.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "2.0.0-beta.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/client-preset": "^4.0.0",
    "@graphql-codegen/client-preset-swc-plugin": "^0.2.0",
    "@next/bundle-analyzer": "^13.4.5",
    "@types/eslint": "^8.40.1",
    "@types/node": "^20.3.0",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.11",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "7.2.1",
    "eslint": "^8.42.0",
    "eslint-config-next": "13.4.5",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prisma": "^4.15.0",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "author": "Adam Lane <enalmada@gmail.com>",
  "description": "A boilerplate for next.js apps",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.16.0"
  },
  "main": ""
}
