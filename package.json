{
  "name": "t3-challenge",
  "version": "0.1.0",
  "scripts": {
    "analyze": "cross-env ANALYZE=true pnpm run buildLocal",
    "build": "next build",
    "buildLocal": "cross-env NODE_ENV=production next build",
    "check-types": "tsc",
    "check-types-watch": "pnpm run check-types -- --watch --preserveWatchOutput",
    "codegen": "pnpm graphql-codegen --watch",
    "dev": "start-server-and-test dev-init http://localhost:3000 codegen",
    "dev-init": "pnpm docker && pnpm install && pnpm migrate && next dev",
    "docker": "docker compose up -d",
    "lint": "next lint",
    "lint:fix": "next lint --fix && pnpm format",
    "format": "prettier --loglevel warn --write .",
    "format:check": "prettier --check .",
    "migrate": "dotenv -e ./.env -e ./dev.env prisma migrate dev",
    "postinstall": "prisma generate",
    "prepare": "husky install",
    "start": "next start"
  },
  "dependencies": {
    "@apollo/client": "3.8.0-beta.2",
    "@apollo/experimental-nextjs-app-support": "^0.3.0",
    "@apollo/server": "^4.7.4",
    "@as-integrations/next": "^2.0.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@hookform/resolvers": "^3.1.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^4.16.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.30.0",
    "encoding": "^0.1.13",
    "graphql": "^16.7.1",
    "next": "13.4.7",
    "next-auth": "^4.22.1",
    "react": "18.2.0",
    "react-datepicker": "^4.14.1",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.45.0",
    "react-tooltip": "^5.15.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "type-graphql": "2.0.0-beta.2",
    "yup": "^1.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/client-preset": "^4.0.1",
    "@graphql-codegen/client-preset-swc-plugin": "^0.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@next/bundle-analyzer": "^13.4.7",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/eslint": "^8.40.2",
    "@types/node": "^20.3.1",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.14",
    "@types/react-datepicker": "^4.11.2",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "7.2.1",
    "eslint": "^8.43.0",
    "eslint-config-next": "13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prisma": "^4.16.1",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "author": "Adam Lane <enalmada@gmail.com>",
