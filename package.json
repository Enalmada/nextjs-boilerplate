{
  "name": "t3-challenge",
  "version": "0.1.0",
  "scripts": {
    "analyze": "cross-env ANALYZE=true bun run buildLocal",
    "aws:sso:login": "aws sso login --profile=lbc-dev",
    "build": "next build",
    "build-storybook": "storybook build",
    "build:drizzle-helpers": "cd packages/drizzle-helpers && bun run build",
    "build:env-valibot": "cd packages/env-valibot && bun run build",
    "build:next-secure": "cd packages/next-secure && bun run build",
    "buildLocal": "dotenv -e ./.env.local cross-env NODE_ENV=production next build",
    "cf:build": "pnpx @cloudflare/next-on-pages",
    "cf:build:watch": "pnpx @cloudflare/next-on-pages --watch",
    "cf:clean": "ps aux | grep \"@cloudflare/workerd-linux-64/bin/workerd serve\" | grep -v grep | awk '{print $2}' | xargs kill -9",
    "cf:dev": "pnpx wrangler pages dev .vercel/output/static --compatibility-flag=nodejs_compat",
    "check-types": "tsc",
    "check-types-watch": "bun run check-types -- --watch --preserveWatchOutput",
    "chromatic": "dotenv -e ./.env.local pnpx chromatic --only-changed",
    "codegen": "bun graphql-codegen --watch",
    "create-env": "printenv > .env.local",
    "dev": "bun dev:init && start-server-and-test dev:only http-get://localhost:3000/api/graphql codegen",
    "dev:init": "bun install && bun docker:up && bun drizzle:migrate",
    "dev:only": "next dev",
    "docker:down": "docker compose --env-file .env.local down",
    "docker:up": "docker compose --env-file .env.local up -d --remove-orphans",
    "drizzle:drop": "dotenv -e ./.env.local drizzle-kit drop",
    "drizzle:generate": "dotenv -e ./.env.local drizzle-kit generate:pg",
    "drizzle:migrate": "dotenv -e ./.env.local node node_modules/drizzle-helpers/dist/migrate ./src/server/db/migrations",
    "drizzle:push": "drizzle-kit push:postgres",
    "format": "prettier --log-level warn --cache --write .",
    "format:check": "prettier --check .",
    "improve": "node openai.js --overwrite",
    "info": "dotenv -e ./.env.local pnpx next info",
    "lint": "dotenv -e ./.env.local next lint  && bun format:check && && bun --bun tsc",
    "lint:fix": "bun format && dotenv -e ./.env.local next lint --fix && bun --bun tsc",
    "pgadmin": "start http://127.0.0.1:5050",
    "pnpm:audit": "pnpm audit --fix",
    "pnpm:depcheck": "depcheck",
    "pnpm:outdated": "pnpm outdated -r",
    "pnpm:prune": "pnpm store prune",
    "precommit": "bun lint-staged",
    "prepare": "husky install",
    "review": "node openai.js",
    "reviewStaged": "sh reviewStaged.sh",
    "sst:dev": "sst bind next dev",
    "sst:dev:deploy": "rm -rf .next && sst deploy --stage dev",
    "sst:dev:init": "cross-env AWS_PROFILE=lbc-dev npx sst dev",
    "start": "next start",
    "storybook": "storybook dev -p 3001 --no-open --quiet",
    "test:all": "bun run test:unit && bun run test:e2e",
    "test:coverage": "cross-env NODE_ENV=test dotenv -e .env.test.local -e .env.test -- vitest --coverage",
    "test:e2e": "cross-env NODE_ENV=test dotenv -o -e .env.test.local -e .env.test playwright test",
    "test:e2e:ui": "cross-env NODE_ENV=test dotenv -o -e .env.test.local -e .env.test playwright -- test --ui",
    "test:unit": "cross-env NODE_ENV=test dotenv -o -e .env.test.local -e .env.test -- vitest",
    "test:watch": "cross-env NODE_ENV=test dotenv -o -e .env.test.local -e .env.test -- vitest watch",
    "ubuntu:update": "sudo apt-get update && sudo apt-get upgrade",
    "vercel-build": "bun run drizzle:migrate && next build",
    "vercel:buildLocal": "dotenv -e ./.env.local pnpx vercel build"
  },
  "dependencies": {
    "@apollo/client": "^3.8.3",
    "@apollo/experimental-nextjs-app-support": "^0.4.2",
    "@casl/ability": "^6.5.0",
    "@ducanh2912/next-pwa": "9.6.0",
