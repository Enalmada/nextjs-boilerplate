{
  "name": "t3-challenge",
  "version": "0.1.0",
  "scripts": {
    "analyze": "cross-env ANALYZE=true pnpm run buildLocal",
    "build": "next build",
    "buildLocal": "cross-env NODE_ENV=production next build",
    "check-types": "tsc",
    "check-types-watch": "pnpm run check-types -- --watch --preserveWatchOutput",
    "codegen": "pnpm graphql-codegen --watch",
    "dev": "start-server-and-test dev-init http://localhost:3000 codegen",
    "dev-init": "pnpm docker && pnpm install && pnpm migrate && next dev",
    "docker": "docker compose up -d",
    "format": "prettier --loglevel warn --write .",
    "format:check": "prettier --check .",
    "improve": "node openai.js --overwrite",
    "lint": "pnpm check-types && next lint && pnpm format:check",
    "lint:fix": "next lint --fix && pnpm format && pnpm check-types",
    "migrate": "dotenv -e ./.env -e ./dev.env prisma migrate dev",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "postinstall": "prisma generate",
    "prepare": "husky install",
    "review": "node openai.js",
    "reviewStaged": "sh reviewStaged.sh",
    "start": "next start",
    "updates": "pnpm outdated -r"
  },
  "dependencies": {
    "@apollo/client": "3.8.0-beta.6",
    "@apollo/experimental-nextjs-app-support": "^0.3.2",
    "@apollo/server": "^4.7.5",
    "@as-integrations/next": "^2.0.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@hookform/resolvers": "^3.1.1",
    "@prisma/client": "^4.16.2",
    "class-validator": "^0.14.0",
    "date-fns": "^2.30.0",
    "encoding": "^0.1.13",
    "firebase": "^9.23.0",
    "graphql": "^16.7.1",
    "lodash": "^4.17.21",
    "next": "13.4.8",
    "next-firebase-auth-edge": "0.7.6",
    "next-sitemap": "^4.1.8",
    "react": "18.2.0",
    "react-datepicker": "^4.15.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.45.1",
    "react-loading-hook": "^1.0.0",
    "react-tooltip": "^5.18.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "type-graphql": "2.0.0-beta.2",
    "yup": "^1.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/client-preset": "^4.0.1",
    "@graphql-codegen/client-preset-swc-plugin": "^0.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@next/bundle-analyzer": "^13.4.8",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/cookie": "^0.5.1",
    "@types/eslint": "^8.40.2",
    "@types/node": "^20.4.0",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.14",
    "@types/react-datepicker": "^4.11.2",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "dotenv-cli": "7.2.1",
    "eslint": "^8.44.0",
    "eslint-config-next": "13.4.8",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "openai": "^3.3.0",
    "postcss": "^8.4.25",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prisma": "^4.16.2",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "author": "Adam Lane <enalmada@gmail.com>",
  "description": "A boilerplate for next.js apps",
