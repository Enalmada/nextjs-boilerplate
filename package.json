    "@storybook/react": "^7.4.5",
    "@storybook/testing-library": "^0.2.1",
    "@storybook/theming": "^7.4.5",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/react": "^14.0.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/cookie": "^0.5.2",
